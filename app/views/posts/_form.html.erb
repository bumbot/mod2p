<ul class="labels errors">
    <% if @post.errors.any? %>
    <div class="ui list"></div>
        <% @post.errors.full_messages.each do |msg| %>
        <div class="item">
            <div class="content">
                <div class="header">
                    <i class="fas fa-exclamation-triangle"></i>
                    <%= msg %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
    <% end %>
</ul>

<div class="labels">
    <%= form_for @post do |u| %>
        <%= u.label :title %>
        <%= u.text_field :title %>
        <div>
        <%= u.label :content %>
        <%= u.text_field :content %>
        </div>
        <%= u.submit %>
    <% end %>
</div>

