<h1><%= @post.title %></h1>

<h2><%= link_to @post.user.name, user_path(@post.user)%></h2>

<p><%= @post.content %></p>


<td><%= button_to 'Favorite this Post', {:controller => "post_favorites", :action => "create", :post_id => @post.id} , :method=>:post  %></td>


<% if @post.user.id == session[:user_id] %>
    <button><%= link_to "Edit this post", edit_post_path %></button>
<% end %>
<div>
    <%= link_to "Back to All Posts", posts_path %>
</div>
<div>
    <%= link_to "Return to homepage", homepage_path %>
</div>