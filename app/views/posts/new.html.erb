<h1>Create a new post</h1>

<%= form_for @post do |u| %>
    <div>
    <%= u.label :title %>
    <%= u.text_field :title %>
    </div>
    <div>
    <%= u.label :user_id %>
    <%= u.number_field :user_id %>
    </div>
    <div>
    <%= u.label :content %>
    <%= u.text_field :content %>
    </div>
    <%= u.submit %>
<% end %>