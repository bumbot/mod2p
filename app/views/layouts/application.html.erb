<!DOCTYPE html>
<html>
  <head>
    <title>Mod2p</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <script src="https://kit.fontawesome.com/3ceb26d5dc.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= stylesheet_link_tag "menu" %>
    <div id="menu-bar" class="ui compact menu">
      <div class="ui simple dropdown item">
        Menu
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="item">
              <%= link_to "Homepage", homepage_path, class: "item" %>
          </div>
          <div class="item">
              <%= link_to "View Users", users_path, class: "item" %>
          </div>
          <div class="item">
              <%= link_to "View Posts", posts_path, class: "item" %>
          </div>
          <div class="item">
              <%= link_to "View Projects", projects_path, class: "item" %>
          </div>
          <div class="item">
              <%= link_to "View Website analytics", analytics_path, class: "item" %>
          </div>
        </div>
      </div>
    </div>
  
    <div class="right floated" id="user-info">
        <% if !session[:user_id] %>
                <button class="ui labeled icon right floated button">
                    <i class="fas fa-sign-in-alt"></i>
                    <%= link_to "Login", sessions_new_path, class: "item" %>
                </button>
                <button class="ui labeled icon right floated button">
                    <i class="fas fa-user-plus"></i>
                    <%= link_to "Sign Up", new_user_path, class: "item" %>
                </button>
            
        <% end %>
    
        <% if session[:user_id] %>
            <button class="ui labeled icon right floated button">
                <i class="fas fa-sign-out-alt"></i>
                <%= link_to "Logout", logout_path, class: "item" %>
            </button>
            <button class="ui labeled icon right floated button">
                <i class="fas fa-user"></i>
                <%= link_to "Hello #{current_user.name}!", user_path(current_user), class: "item" %>
            </button>
            
        
        <% end %>
    </div>
    <%= yield %>
  </body>
</html>
