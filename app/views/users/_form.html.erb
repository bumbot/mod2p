<ul>
    <% if @user.errors.any? %>
        <h2>Please read the errors:</h2>
        <% @user.errors.full_messages.each do |msg| %>
        <li>
            <%= msg %>
        </li>
        <% end %>
    <% end %>
</ul>
    
    <%= form_for @user do |u| %>
        <div class="labels">
            <%= u.label :name %>
            <%= u.text_field :name %>
        </div>
        <div class="labels">
            <%= u.label :username %>
            <%= u.text_field :username %>
        </div>
        <div class="labels">
            <%= u.label :password %>
            <%= u.password_field :password %>
        </div>
        <div class="labels">
            <%= u.label :github_profile, value="GitHub Profile" %>
            <%= u.text_field :github_profile %>
        </div>
        <div class="labels">
            <%= u.label :cohort_name, value="Cohort Name" %>
            <%= u.text_field :cohort_name %>
        </div>
        <div class="labels">
            <%= u.label :cohort_start, value="Cohort Start Date" %>
            <%= u.date_field :cohort_start %>
        </div>
        <div>
            <%= u.submit %>
        </div>
    <% end %>

