<h1><%= @project.name %></h1>

<h2>GitHub URL: <%= @project.github_url %></h2>

<p><%= @project.description %></p>

<h2>Collaborators:</h2>
<ul>
    <% @project.users.each do |user| %>
    <li>
        <%= link_to user.name, user_path(user) %>
    </li>
    <% end %>
</ul>

<td><%= button_to 'Favorite this Project', {:controller => "project_favorites", :action => "create", :project_id => @project.id} , :method=>:post  %></td>


<% @project.users.each do |user| %>
    <% if user.id == session[:user_id] %>
        <%= link_to "Edit this project", edit_project_path %>
    <% end %>
<% end %>
<%= link_to "Back to All Projects", projects_path %>